      'text-align':'center',
      'line-height':'80px',
      'background-color':'#da392b',
      'font-size': '30px',
      'font-weight': '700',
      color: '#fff'
      }
      ) 完成
    .complete(
      style={
        width : '100vw',
        height: '5vh',
        display: 'flex',
        'justify-content': 'center',
        'align-items': 'center'
      }
    ) 
      a(
      id='out',
      onclick='loginOut()' 
